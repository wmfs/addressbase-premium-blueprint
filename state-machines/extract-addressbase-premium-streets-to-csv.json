{
  "Comment": "Extracts Streets information from AddressBase Premium GML",
  "version": "1.0",
  "StartAt": "ExtractStreets",
  "categories": [
    "gazetteer"
  ],
  "instigators": [
    "user"
  ],
  "States": {
    "ExtractStreets": {
      "Type": "Task",
      "InputPath": "$.streets",
      "Resource": "module:flattenXmlFiles",
      "ResourceConfig": {
        "rootXMLElement": "Street",
        "pivotPath": "$..StreetDescriptiveIdentifier",
        "headerMap": [
          ["$.usrn", "usrn", "number"],
          ["$.changeType", "changeType", "string"],
          ["$.state", "state", "number"],
          ["$.stateDate", "state_date", "date"],
          ["@.streetDescription.en", "description", "string"],
          ["@.locality.en", "locality","string"],
          ["@.townName.en", "town_name", "string"],
          ["@.administrativeArea.en", "administrative_area","string"],
          ["$.streetSurface", "surface", "number"],
          ["$.streetClassification", "classification", "number"],
          [{"select": "$.streetStart.Point.pos", "transform":"ordnanceSurvey_xCoord"}, "start_x", "number"],
          [{"select": "$.streetStart.Point.pos", "transform":"ordnanceSurvey_yCoord"}, "start_y", "number"],
          [{"select": "$.streetEnd.Point.pos", "transform":"ordnanceSurvey_xCoord"}, "end_x", "number"],
          [{"select": "$.streetEnd.Point.pos", "transform":"ordnanceSurvey_yCoord"}, "end_y", "number"],
          [{"select": "$.streetStartLatLong.Point.pos", "transform":"ordnanceSurvey_xCoord"}, "start_longitude", "number"],
          [{"select": "$.streetStartLatLong.Point.pos", "transform":"ordnanceSurvey_yCoord"}, "start_latitude", "number"],
          [{"select": "$.streetEndLatLong.Point.pos", "transform":"ordnanceSurvey_xCoord"}, "end_longitude", "number"],
          [{"select": "$.streetEndLatLong.Point.pos", "transform":"ordnanceSurvey_yCoord"}, "end_latitude", "number"],
          ["$.startDate", "start_date", "date"],
          ["$.lastUpdateDate", "last_update_date", "date"],
          ["$.entryDate", "entry_date", "date"]

        ],
        "namespace": "strip",
        "xmllang": "wrap"
      },
      "End": true
    }
  },
  "restrictions": [
    {
      "roleId": "$authenticated",
      "allows": [
        "*"
      ]
    }
  ]
}
